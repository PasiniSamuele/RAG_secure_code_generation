	"name": "Poetry",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"dockerFile": "../Dockerfile_devcontainer",

	"runArgs": ["--add-host=host.docker.internal:host-gateway",
	"--gpus", "all"],
